<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Productos</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>

<div class="product-item">
    <p><strong>_id:</strong> {{products._id}}</p>
    <p><strong>Title:</strong> {{products.title}}</p>
    <p><strong>Description:</strong> {{products.description}}</p>
    <p><strong>Code:</strong> {{products.code}}</p>
    <p><strong>Stock:</strong> {{products.stock}}</p>
    <p><strong>Status:</strong> {{products.status}}</p>
    <p><strong>Category:</strong> {{products.category}}</p>
    <p><strong>Price:</strong> {{products.price}}</p>
    <button class="btn-delete" data-id="{{products._id}}">Eliminar</button>
    {{#if products.status}}
    <button class="btn-cart" data-id3={{products._id}}>
        <i class="fas fa-shopping-cart"></i> Agregar al Carrito
    </button>
    {{/if}}
    <button class="btn-volver">Volver</button>
</div>
<!-- Ventana emergente -->
<div class="overlay" id="popupOverlay">
    <div class="popup">
        <form id="carritoForm">
            <h2>Producto: </h2>
            <h2 id="h2">{{products._id}}</h2>
            <h2>Lista de carritos</h2>
            <select id="popupList">
            </select>
            <label for="name">Cantidad:</label>
            <input type="number" id="numberProducts" name="number" min="1" value="0">
            <button class="close-btn" onclick="closePopup()">Cerrar</button>
            <button type="submit" name='submit' id="agregarCarrito" class="agregarCarrito-btn">Seleccionar</button>
        </form>
    </div>
</div>

<script src="/js/products.js"></script>