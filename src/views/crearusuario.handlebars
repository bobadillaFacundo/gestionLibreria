<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Crear Usuario</title>
    <base href="/">
    <link type="text/css" rel="stylesheet" href="/css/index.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<header class="container mt-3">
    <button class="btn btn-secondary buttonLoginUsuario">Volver</button>
</header>
<body>
    <!-- Contenedor principal -->
    <div class="container mt-5">
        <section class="usuarios-section">
            <h2 class="toggle-form text-center" data-target="formU">Crear Usuario</h2>
            <form id="formC" class="form bg-light p-4 rounded shadow" method="post" action="/api/usuarios/usuariosCrear">
                <div class="mb-3">
                    <label for="Usuario" class="form-label">Usuario</label>
                    <input type="text" id="Usuario" class="form-control" placeholder="Usuario" name="usuario">
                </div>
                <div class="mb-3">
                    <label for="ConstraseniaUsuario" class="form-label">Contraseña</label>
                    <input type="password" id="ConstraseniaUsuario" class="form-control" placeholder="Contraseña" name="contrasenia">
                </div>
                <button type="submit" class="btn btn-primary buttonUsuarioCrear w-100">Crear</button>
            </form>
        </section>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/crearUsuario.js"></script>
</body>