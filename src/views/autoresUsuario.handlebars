<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestión de Autores</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link type="text/css" rel="stylesheet" href="/css/index.css">
</head>

<header class="container mt-3">
    <button  class=" btn btn-secondary Usuario">Volver</button>
</header>

<body>
    <div class="container mt-4">
        <h1 class="text-center">Lista de Autores</h1>

        <!-- Sección de Buscar ID -->
        <section class="search-section">
            <div class="search-container">
                <h2>Buscar por Nombre</h2>
                <form id="IDC-1">
                    <div class="form-group">
                        <label for="IDA">Nombre del Autor:</label>
                        <input type="text" id="IDAA" name="IDAA" class="form-control" placeholder="Nombre del autor">
                    </div>
                    <button type="button" class="btn btn-primary buscarLibroUsuario">Buscar</button>
                </form>
            </div>
            <br>
        </section>

        <!-- Sección de Autores -->
        <section class="libros-section">
            <div class="row">
                {{#each autores}}
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">Autor</h5>
                            <p><strong>_id:</strong> {{_id}}</p>
                            <p><strong>Nombre:</strong> {{nombre}}</p>
                            <p><strong>Edad:</strong> {{edad}}</p>

                            <h6>Lista de Libros:</h6>
                            {{#each libros}}
                            <div class="list-group">
                                <div class="list-group-item">
                                    <p><strong>Título:</strong> {{titulo}}</p>
                                </div>
                            </div>
                            {{/each}}
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </section>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/autorindex.js"></script>
</body>
