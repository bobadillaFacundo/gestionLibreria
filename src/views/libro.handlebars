<header>
    <button class="btn-volver-libro">Volver</button>
</header>
<body>
    <!-- Sección de Libros -->
    <section class="libros-section">
        <div class="libros-container">
            {{#each libros}}
            <div class="libros-item">
                <label for="text">Libro:</label>
                <p><strong>_id:</strong> {{_id}}</p>
                <p><strong>Autor:</strong>{{autor.nombre}}</p>
                <p><strong>Título:</strong> {{titulo}}</p>
                <p><strong>Descripción:</strong> {{descripcion}}</p>
                <p><strong>Precio:</strong> {{precio}}</p>
                <p><strong>Cantidad:</strong> {{cantidad}}</p>
                <label for="text">Lista de categorías:</label>
                {{#each categorias}}
                <div class="product-item">
                    <p>{{nombre}}</p>
                </div>
                {{/each}}
                <br>
                <button class="btn-delete-libro" data-id-libro={{_id}}>Eliminar Libro</button>
            </div>
            {{/each}}
        </div>
    </section>
</body>
<script src="/js/libroindex.js"></script>
